{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": "container",
  "data": {
    "url": "https://raw.githubusercontent.com/iadorialai/FIT3179/main/Visualisation/data/gdp.csv"
  },
  "mark": "bar",
  "encoding": {
    "x": {"field": "GDP", "type": "quantitative", "title": "GDP"},
    "y": {
      "field": "Area",
      "type": "nominal",
      "title": "",
      "sort": {"encoding": "x", "order": "descending"}
    }
  },
  "config": {
    "background": "#F3FAF9",
    "axis": {
      "titleColor": "#527298",
      "labelColor": "#527298",
      "labelFont": "sans-serif",
      "labelFontSize": 15,
      "titleFontSize": 15
    }
  }
}